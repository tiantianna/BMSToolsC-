                                    <GradientStop Offset="0" Color="LightGray"></GradientStop>
                                    <GradientStop Offset="1" Color="Gray"></GradientStop>
                                </RadialGradientBrush>
                            </Ellipse.Fill>-->
                        </Ellipse>
                        <ContentPresenter Name="GelButtonContent" VerticalAlignment="Center" HorizontalAlignment="Center"
                                          Content="{TemplateBinding Content}" />
                    </Grid>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


